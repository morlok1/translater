{
    "manifest_version": 2,
 
    "name": "Translate",
    "description": "For translate",
    "version": "0.1",
 
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
	
	
	"permissions": [
		"https://dictionary.yandex.net/*"
	],

    "permissions": [
        "activeTab"
    ],
	
	  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl + Space"
      }
    }
  },
  
    "optional_permissions": ["tabs"],
  "options_page": "settings.html",
  "options_ui": {
    "chrome_style": false,
    "page": "settings.html"
  }
  
}